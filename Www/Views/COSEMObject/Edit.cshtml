@using System.Globalization
@model web.Models.ViewCOSEMObject

@{
    ViewBag.Title = "Edit COSEM object properties";
    Layout = "~/Views/Shared/_LayoutRepresentation.cshtml";
}

<h2>Edit COSEM object properties</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<p>
    @Html.ActionLink("Objects", "Index/" + Model.COSEMLogicalDeviceID)
</p>

@using (Html.BeginForm()) 
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>COSEM object properties</legend>

        @Html.HiddenFor(model => model.DeviceTypeID)
        @Html.HiddenFor(model => model.COSEMLogicalDeviceID)

        <table style="width:100%;">
            <tr>
                <td style="border: 0 hidden;">
                    <div class="display-label">Device type</div>
                </td>
                <td style="border: 0 hidden;">
                    <div class="display-field">
                        @Html.Raw(ViewBag.DeviceTypeName)
                    </div>
                </td>
            </tr>

            <tr>
                <td style="border: 0 hidden;">
                    <div class="display-label">COSEM logical device ID</div>
                </td>
                <td style="border: 0 hidden;">
                    <div class="display-field">
                        @Html.Raw(Model.COSEMLogicalDeviceID.ToString(CultureInfo.InvariantCulture))
                    </div>
                </td>
            </tr>

            <tr>
                <td style="border: 0 hidden;">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.COSEMClassID, "COSEM class")
                    </div>
                </td>
                <td style="border: 0 hidden;">
                    <div class="editor-field">
                        @Html.DropDownList("COSEMClassID")
                        @Html.ValidationMessageFor(model => model.COSEMClassID)
                    </div>
                </td>
            </tr>

            <tr>
                <td style="border: 0 hidden;">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.COSEMLogicalName, "COSEM logical name")
                    </div>
                </td>
                <td style="border: 0 hidden;">
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.COSEMLogicalName /*, new { style = "width:100%;" }*/)
                        @Html.ValidationMessageFor(model => model.COSEMLogicalName)
                    </div>
                </td>
            </tr>
        </table>
    </fieldset>
    <p>
        <input type="submit" value="Save" />
    </p>
}
