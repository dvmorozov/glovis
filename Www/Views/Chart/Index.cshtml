@model IEnumerable<web.Models.ViewChart>

@{
    ViewBag.Title = "Screens";
    Layout = "~/Views/Shared/_LayoutRepresentation.cshtml";

    var grid = new WebGrid(Model,
                           defaultSort: "ID",
                           rowsPerPage: 20); 
}

<h2>@Html.Raw(ViewBag.Title)</h2>

<p>
    @Html.ActionLink("Add", "Create") |
    @Html.ActionLink("Matrices", "Index", "ChartSet")
</p>

<div id="grid">
    @grid.GetHtml( 
        tableStyle: "grid", 
        headerStyle: "head", 
        alternatingRowStyle: "alt", 
        columns: grid.Columns(
            grid.Column("Name", "Title", style: "product"),
            grid.Column("Width", "Cell Width", style: "product"),
            grid.Column("Height", "Cell Height", style: "product"),            
            grid.Column("ID", "", @<text>@Html.ActionLink("View", "ShowChart", new { id = item.ID })</text>, "product", false),
            grid.Column("ID", "", @<text>@Html.ActionLink("Source", "DataSet", new { id = item.ID })</text>, "product", false),    
            grid.Column("ID", "", @<text>@Html.ActionLink("Edit", "Edit", new { id = item.ID })</text>, "product", false),
            grid.Column("ID", "", @<text>@Html.ActionLink("Details", "Details", new { id = item.ID })</text>, "product", false),
            grid.Column("ID", "", @<text>@Html.ActionLink("Delete", "Delete", new { id = item.ID })</text>, "product", false)
        ),
        numericLinksCount: 20
    )
</div>
