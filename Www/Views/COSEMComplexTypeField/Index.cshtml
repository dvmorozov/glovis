@model IEnumerable<web.Models.ViewCOSEMComplexTypeField>

@{
    ViewBag.Title = "Complex COSEM type fields";
    Layout = "~/Views/Shared/_LayoutRepresentation.cshtml";

    var grid = new WebGrid(Model,
                           defaultSort: "Name",
                           rowsPerPage: 20); 
}

<h2>@Html.Raw(ViewBag.Title)</h2>

<p>
    @Html.ActionLink("Add", "Create/" + ((Int64)(ViewBag.AggregateTypeID))) |
    @Html.ActionLink("Types", "Index", "CosemDataType")
</p>

<div id="grid">
    @grid.GetHtml(
        tableStyle: "grid",
        headerStyle: "head",
        alternatingRowStyle: "alt",
        columns: grid.Columns(
            grid.Column("Name", "Field name", style: "product"),
            grid.Column("AggregateTypeName", "Aggregate Type", style: "product"),
            grid.Column("TypeName", "Field COSEM type", style: "product"),
            grid.Column("Standard", "Standard", style: "product"),
            grid.Column("ID", "", @<text>@Html.ActionLink("Edit", "Edit", new { id = item.ID })</text>, style: "product", canSort: false),
            grid.Column("ID", "", @<text>@Html.ActionLink("Details", "Details", new { id = item.ID })</text>, style: "product", canSort: false),
            grid.Column("ID", "", @<text>@Html.ActionLink("Delete", "Delete", new { id = item.ID })</text>, style: "product", canSort: false)
        ),
        numericLinksCount: 20
    )
</div>
