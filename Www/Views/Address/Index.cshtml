@model IEnumerable<web.Models.ViewAddress>

@{
    ViewBag.Title = "List of available locations";
    Layout = "~/Views/Shared/_LayoutRepresentation.cshtml";

    var grid = new WebGrid(Model,
                       defaultSort: "Country",
                       rowsPerPage: 20); 
}

<h2>List of available locations</h2>

<p>
    @Html.ActionLink("Add", "CreateCountry")
</p>

<div id="grid">
    @grid.GetHtml( 
        tableStyle: "grid", 
        headerStyle: "head", 
        alternatingRowStyle: "alt", 
        columns: grid.Columns(
            grid.Column("Country", "Country", style: "product"),
            grid.Column("State", "State", style: "product"),
            grid.Column("City", "City", style: "product"),
            grid.Column("Street", "Street", style: "product"),
            grid.Column("Building", "Building", style: "product"),
            grid.Column("Apartament", "Apartment", style: "product"),
            grid.Column("ZipCode", "Zip Code", style: "product"),
            grid.Column("ID", "", @<text>@Html.ActionLink("Change", "Select", new { returnTo=(String)ViewBag.ReturnTo })</text>, "product", false),
            grid.Column("ID", "", @<text>@Html.ActionLink("Delete", (String)("Delete/" + item.ID.ToString()))</text>, "product", false)
        ),
        numericLinksCount: 20
    )
</div>
