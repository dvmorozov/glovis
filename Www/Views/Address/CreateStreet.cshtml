@model web.Models.ViewAddress

@{
    ViewBag.Title = "Add street";
    Layout = "~/Views/Shared/_LayoutRepresentation.cshtml";
}

<h2>Add street</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<p>
    @Html.ActionLink("Locations", "Index") |
    @Html.ActionLink("Change", "Select")
</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.Hidden("returnTo", (String)ViewBag.ReturnTo)
    @Html.Hidden("countryID", (Int64)ViewBag.CountryID)
    @Html.Hidden("stateID", (Int64)ViewBag.StateID)
    @Html.Hidden("cityID", (Int64)ViewBag.CityID)
    <fieldset>
        <legend></legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Street)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Street)
            @Html.ValidationMessageFor(model => model.Street)
        </div>
    </fieldset>
<p>
    <input type="submit" value="Add Street" />
</p>
}
