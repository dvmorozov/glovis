@model IEnumerable<web.Models.ViewDeviceTypeAndOwner>

@{
    ViewBag.Title = "Cameras associated with the group \"" + ViewBag.GroupName + "\"";
    Layout = "~/Views/Shared/_LayoutRepresentation.cshtml";

    var grid = new WebGrid(source: Model,
                           defaultSort: "DeviceName",
                           rowsPerPage: 20); 
}

<h2>@Html.Raw(ViewBag.Title)</h2>

<p>
    @Html.ActionLink("Add", "Create", new { id = ViewBag.CurrentGroupID }, null) |
	@Html.ActionLink("Groups", "Index", "Group")
</p>
<div id="grid">
    @grid.GetHtml(
        tableStyle: "grid",
        headerStyle: "head",
        alternatingRowStyle: "alt",
        columns: grid.Columns(
            grid.Column("DeviceName", "Name", style: "product"),
            @*grid.Column("DeviceTypeName", "Type", style: "product"),*@
            @*grid.Column("DeviceOwnerName", "Owner", style: "product"),*@
            @*grid.Column("ID", "", format: @<text>@Html.ActionLink("XML Template", "XMLTemplate", "Device", new { id = item.ID }, null)</text>, style: "product", canSort: false),*@
            grid.Column("ID", "", format: @<text>@Html.ActionLink("Edit", "Edit", new { id = item.ID })</text>, style: "product", canSort: false),
            grid.Column("ID", "", format: @<text>@Html.ActionLink("Details", "Details", new { id = item.ID })</text>, style: "product", canSort: false),
            grid.Column("ID", "", format: @<text>@Html.ActionLink("Delete", "Delete", new { id = item.ID })</text>, style: "product", canSort: false)
        ),
        numericLinksCount: 20
    )
</div>