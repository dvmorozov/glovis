@model web.Models.ViewChartSet

@using web.Models;
@using web.Controllers;

@{
    List<ViewChartSetsCharts> l1 = (List<ViewChartSetsCharts>)ViewBag.ChartSetsCharts;
}

<script src="http://releases.flowplayer.org/js/flowplayer-3.2.11.min.js"></script>

<div style="width: 100%; height: 320px;">
    <div style="position: relative; float: left; margin-left: 200px;">
        <a href="http://fiteasily.com:8081" class="player" style="display: block; width: 425px;
            height: 300px; margin: 10px auto" id="player1"></a>
    </div>
    <div style="position: relative; float: right; margin-right: 200px;">
        <a href="http://fiteasily.com:8082" class="player" style="display: block; width: 425px;
            height: 300px; margin: 10px auto" id="player2"></a>
    </div>
</div>

<script>
    flowplayer("player1", "http://releases.flowplayer.org/swf/flowplayer-3.2.12.swf");
    flowplayer("player2", "http://releases.flowplayer.org/swf/flowplayer-3.2.12.swf");
</script>

<div style="position:relative;">
    <fieldset>
        <legend>Timeline</legend>
        <table style="width:100%;">
            @{
                List<TwitInfo> twits = (List<TwitInfo>)ViewBag.twits;
                foreach (TwitInfo ti in twits)
                {
                    string createdAt = ti.createdAt;
                    createdAt = createdAt.Remove(createdAt.IndexOf("+"), 6);
                    createdAt = createdAt.Remove(0, 4);
                    @Html.Raw("<tr><td style=\"border: 0 hidden;\">" + createdAt + "</td><td style=\"border: 0 hidden;\">" + ti.text + "</td></tr>");
                }
            }
        </table>
    </fieldset>
</div>

<div style="float:right; position:relative; top:-100px; right:10px;">
    <div style="font-size: 1.2em; text-align:center;"><a href="http://www.twitter.com/oonze"><img src="../../Content/images/bird_48_blue.png" alt="@Html.Raw((String)ViewBag.AppName1) @Html.Raw((String)ViewBag.AppName2) on Twitter"/></a></div>
    <div style="font-size: 1.2em; text-align:center;"><a href="http://www.twitter.com/oonze">Follow me</a></div>
</div>

